{
  "description": "Complete Sora 2 API Parameters Reference",
  "api_endpoint": "https://api.openai.com/v1/video/generations",
  "http_method": "POST",
  "required_headers": {
    "Authorization": "Bearer YOUR_API_KEY",
    "Content-Type": "application/json"
  },
  "parameters": {
    "model": {
      "type": "string",
      "required": true,
      "description": "The Sora model to use for video generation",
      "options": [
        {
          "value": "sora-2",
          "description": "Standard model for video generation",
          "max_duration_seconds": 20,
          "max_resolution": "720p",
          "fps_options": [24, 30],
          "cost_per_10_seconds": 3.00
        },
        {
          "value": "sora-2-pro",
          "description": "Premium model with extended capabilities",
          "max_duration_seconds": 90,
          "max_resolution": "1024p",
          "fps_options": [24, 30, 60],
          "cost_per_10_seconds": 5.00
        }
      ]
    },
    "prompt": {
      "type": "string",
      "required": true,
      "description": "Text description of the video to generate",
      "max_length": 500,
      "tips": [
        "Be specific about subjects, actions, and settings",
        "Include lighting details (golden hour, dramatic, soft)",
        "Mention camera movement (pan, zoom, static)",
        "Describe mood and atmosphere",
        "Specify visual style if needed"
      ],
      "examples": [
        "A golden retriever running through a sunlit meadow, slow motion, cinematic lighting",
        "Time-lapse of city skyline from day to night, traffic flowing, dramatic clouds",
        "Close-up of coffee being poured, steam rising, warm cafe ambiance"
      ]
    },
    "duration": {
      "type": "integer",
      "required": false,
      "description": "Length of video in seconds",
      "default": 10,
      "sora_2_range": {
        "min": 1,
        "max": 20
      },
      "sora_2_pro_range": {
        "min": 1,
        "max": 90
      },
      "recommendations": {
        "social_media": "6-15 seconds",
        "product_demo": "10-20 seconds",
        "cinematic": "15-30 seconds",
        "long_form": "30-90 seconds (Pro only)"
      }
    },
    "resolution": {
      "type": "string",
      "required": false,
      "description": "Video resolution in WIDTHxHEIGHT format",
      "default": "1280x720",
      "format": "WIDTHxHEIGHT",
      "common_resolutions": {
        "720p_landscape": "1280x720",
        "1080p_landscape": "1920x1080",
        "720p_portrait": "720x1280",
        "1080p_portrait": "1080x1920",
        "square_720": "720x720",
        "square_1080": "1080x1080",
        "4k_landscape": "3840x2160"
      },
      "aspect_ratios": {
        "16:9": {
          "description": "Standard landscape (YouTube, TV)",
          "recommended_resolutions": ["1280x720", "1920x1080"]
        },
        "9:16": {
          "description": "Vertical/Portrait (TikTok, Reels, Stories)",
          "recommended_resolutions": ["720x1280", "1080x1920"]
        },
        "1:1": {
          "description": "Square (Instagram posts)",
          "recommended_resolutions": ["1080x1080"]
        },
        "4:3": {
          "description": "Classic TV format",
          "recommended_resolutions": ["1024x768"]
        },
        "21:9": {
          "description": "Ultrawide cinematic",
          "recommended_resolutions": ["2560x1080"]
        }
      }
    },
    "quality": {
      "type": "string",
      "required": false,
      "description": "Output quality level",
      "default": "standard",
      "options": [
        {
          "value": "standard",
          "description": "Default quality, faster generation",
          "use_case": "Quick previews, testing, cost optimization"
        },
        {
          "value": "high",
          "description": "Enhanced quality, longer generation time",
          "use_case": "Final production, client deliverables, premium content"
        }
      ]
    },
    "style": {
      "type": "string",
      "required": false,
      "description": "Visual style preset to apply",
      "default": null,
      "options": [
        {
          "value": "cinematic",
          "description": "Movie-like quality with dramatic lighting and depth of field",
          "characteristics": [
            "Film grain",
            "Cinematic color grading",
            "Dramatic lighting",
            "Bokeh effects",
            "Professional camera work"
          ],
          "use_case": "Film projects, trailers, dramatic content"
        },
        {
          "value": "documentary",
          "description": "Realistic, natural appearance",
          "characteristics": [
            "Natural lighting",
            "Realistic colors",
            "Handheld camera feel",
            "Authentic environments",
            "Minimal post-processing"
          ],
          "use_case": "Educational content, news, realistic scenarios"
        },
        {
          "value": "animation",
          "description": "Stylized, animated look",
          "characteristics": [
            "Stylized rendering",
            "Vibrant colors",
            "Smooth motion",
            "Artistic interpretation",
            "Non-photorealistic"
          ],
          "use_case": "Cartoon content, stylized marketing, creative projects"
        }
      ]
    },
    "fps": {
      "type": "integer",
      "required": false,
      "description": "Frames per second for video output",
      "default": 30,
      "options": [
        {
          "value": 24,
          "description": "Cinematic film standard",
          "use_case": "Movies, cinematic content, artistic projects",
          "compatibility": ["sora-2", "sora-2-pro"]
        },
        {
          "value": 30,
          "description": "Standard video frame rate",
          "use_case": "YouTube, general video content, TV",
          "compatibility": ["sora-2", "sora-2-pro"]
        },
        {
          "value": 60,
          "description": "High frame rate for smooth motion",
          "use_case": "Sports, action sequences, gaming content",
          "compatibility": ["sora-2-pro"],
          "note": "Pro model only"
        }
      ]
    }
  },
  "response_structure": {
    "initial": {
      "description": "Immediate response after POST request",
      "fields": {
        "id": "Unique job identifier for polling",
        "status": "Initial status (typically 'processing')",
        "created_at": "ISO 8601 timestamp of job creation"
      },
      "example": {
        "id": "job_abc123xyz",
        "status": "processing",
        "created_at": "2025-10-19T12:30:45Z"
      }
    },
    "polling": {
      "description": "Status check response from GET /video/generations/{id}",
      "endpoint": "GET https://api.openai.com/v1/video/generations/{job_id}",
      "recommended_interval": "5 seconds",
      "timeout": "300-600 seconds (5-10 minutes)",
      "status_values": {
        "processing": "Video is being generated",
        "completed": "Video generation successful",
        "failed": "Video generation failed"
      },
      "completed_response": {
        "id": "Job identifier",
        "status": "completed",
        "video_url": "HTTPS URL to download the video",
        "duration": "Actual video duration in seconds",
        "resolution": "Actual output resolution",
        "created_at": "Job creation timestamp",
        "completed_at": "Job completion timestamp"
      },
      "example": {
        "id": "job_abc123xyz",
        "status": "completed",
        "video_url": "https://cdn.openai.com/videos/abc123.mp4",
        "duration": 10,
        "resolution": "1280x720",
        "created_at": "2025-10-19T12:30:45Z",
        "completed_at": "2025-10-19T12:32:15Z"
      }
    }
  },
  "cost_calculation": {
    "sora_2": {
      "base_cost": "$0.30 per second",
      "examples": {
        "5_seconds": "$1.50",
        "10_seconds": "$3.00",
        "20_seconds": "$6.00"
      }
    },
    "sora_2_pro": {
      "base_cost": "$0.50 per second",
      "examples": {
        "5_seconds": "$2.50",
        "10_seconds": "$5.00",
        "30_seconds": "$15.00",
        "60_seconds": "$30.00",
        "90_seconds": "$45.00"
      }
    },
    "notes": [
      "Costs are approximate and based on October 2025 pricing",
      "High quality may incur additional costs",
      "Check OpenAI's pricing page for current rates"
    ]
  },
  "best_practices": {
    "prompt_engineering": [
      "Start with a clear subject and action",
      "Add environmental details (lighting, weather, time of day)",
      "Specify camera movement or perspective",
      "Include mood and atmosphere descriptors",
      "Test with shorter durations first (5-10 seconds)",
      "Iterate on successful prompts with variations"
    ],
    "parameter_selection": [
      "Use Sora 2 for testing and iteration (lower cost)",
      "Use Sora 2 Pro for final production and long-form content",
      "Match aspect ratio to your distribution platform",
      "Choose 30 FPS for general content (best compatibility)",
      "Use 24 FPS for cinematic film look",
      "Use 60 FPS only when smooth motion is critical"
    ],
    "cost_optimization": [
      "Start with standard quality for testing",
      "Generate shorter clips and edit together",
      "Test prompts with 5-10 second durations first",
      "Use Sora 2 for initial concepts",
      "Switch to Pro only when needed"
    ],
    "quality_tips": [
      "Specific prompts yield better results than vague ones",
      "Include visual style keywords (cinematic, dramatic, etc.)",
      "Describe lighting explicitly",
      "Mention camera techniques (tracking shot, close-up, etc.)",
      "Use the style parameter for consistent aesthetics"
    ]
  },
  "common_use_cases": {
    "social_media": {
      "tiktok_reels": {
        "aspect_ratio": "9:16",
        "resolution": "1080x1920",
        "duration": "10-15 seconds",
        "fps": 30,
        "style": "dynamic and engaging"
      },
      "youtube_shorts": {
        "aspect_ratio": "9:16",
        "resolution": "1080x1920",
        "duration": "15-60 seconds",
